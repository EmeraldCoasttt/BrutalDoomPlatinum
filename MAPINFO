{
   AmmoFactor = 1
   FastMonsters
   DamageFactor = 1.0
   SpawnFilter = Hard
   name = "Watch Me Die"
   SpawnMulti
	mustconfirm = "This enables multiplayer monsters and weapons, are you sure?"
   
}




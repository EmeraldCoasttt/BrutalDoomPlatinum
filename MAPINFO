skill easyhard
{
   AutoUseHealth
   AmmoFactor = 1
   DamageFactor = 0.25
   EasyBossBrain
   SpawnFilter = hard
   SpawnMulti
   name = "I Just Want To Kill"
   mustconfirm = "Plenty of enemies, 75% less damage. Press Enter to Confirm"
}




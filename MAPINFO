{
   AmmoFactor = 1
   FastMonsters
   DisableCheats
   RespawnTime = 20
   SpawnFilter = Nightmare
   name = "Nightmare!"
   mustconfirm = "Enemies are much more aggressive, and respawn after 20 seconds. Press Enter to Confirm"
}





